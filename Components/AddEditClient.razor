@page "/add-client"
@rendermode InteractiveServer
@page "/edit-client/{ClientId:int}"
@using Client_Invoice_System.Models
@using Client_Invoice_System.Repositories
@using Client_Invoice_System.Repository
@inject ClientRepository ClientRepo
@inject NavigationManager Navigation

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded" style="width: 450px;">
        <h3 class="text-center text-primary mb-4">@(ClientId == 0 ? "Add Client" : "Edit Client")</h3>

        <EditForm Model="client" OnValidSubmit="SaveClient">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label class="form-label fw-bold">Name:</label>
                <InputText class="form-control" @bind-Value="client.Name" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Email:</label>
                <InputText class="form-control" type="email" @bind-Value="client.Email" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Address:</label>
                <textarea class="form-control" @bind="client.Address" rows="2" style="min-height: 40px; max-height: 150px; overflow-y: auto;"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Phone Number:</label>
                <InputText class="form-control" @bind-Value="client.PhoneNumber" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Currency:</label>
                <InputText class="form-control" @bind-Value="client.Currency" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Country:</label>
                <InputText class="form-control" @bind-Value="client.Country" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Due Date:</label>
                <InputDate class="form-control" @bind-Value="client.DueDate" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Client Identifier:</label>
                <InputText class="form-control" @bind-Value="client.ClientIdentifier" maxlength="5" />
            </div>

            <div class="d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary px-4 py-2">Save</button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter] public int ClientId { get; set; }
    private Client client = new();

    protected override async Task OnInitializedAsync()
    {
        if (ClientId != 0)
        {
            client = await ClientRepo.GetByIdAsync(ClientId) ?? new Client();
        }
    }

    private async Task SaveClient()
    {
        if (ClientId == 0)
        {
            await ClientRepo.AddAsync(client);
        }
        else
        {
            await ClientRepo.UpdateAsync(client);
        }

        Navigation.NavigateTo("/clients");
    }
    private async Task Cancel()
    {
        Navigation.NavigateTo("/clients");
    }
}
